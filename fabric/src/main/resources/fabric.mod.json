{
    "schemaVersion": 1,
    "id": "${mod_id}",
    "version": "${version}",

    "name": "${mod_name}",
    "description": "${description}",
    "authors": [
        "${mod_author}"
    ],
    "contributors": [
        "${contributors}"
    ],
    "contact": {
        "homepage": "${homepage}",
        "sources": "${sources}",
        "issues": "${issues}"
    },

    "license": "${license}",
    "icon": "${icon}",
    "environment": "*",
    "entrypoints": {
        "main": [
            "dev.thomasglasser.multiloadertemplate.MultiloaderTemplateFabric"
        ]
    },
    "mixins": [
        "${mod_id}.mixins.json",
        "${mod_id}.fabric.mixins.json"
    ],

    "depends": {
        "fabricloader": ">=${fabric_loader_version}",
        "fabric-api": ">=${fabric_version}",
        "minecraft": ">=${minecraft_version}",
        "java": ">=17"
    },
    "custom": {
        "mc-publish": {
            "loaders": ["fabric", "quilt"]
        }
    }
}
